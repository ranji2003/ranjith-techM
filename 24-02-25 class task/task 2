    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>React Functional Component with Props</title>
    <!-- âœ… React & ReactDOM CDN -->
    <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <!-- âœ… Babel for JSX -->
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
</head>
<body>
    <!-- âœ… Root div for React rendering -->
    <div id="root"></div>

    <script type="text/babel">
        // âœ… Functional component with props
        function Flower(props) {
            return <h2>The flower name is {props.name} ðŸŒ¹</h2>;
        }

        function App() {
            return <Flower name="Rose" />;
        }

        // âœ… Rendering the App component inside #root
        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
